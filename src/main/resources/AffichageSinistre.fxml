<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #04BFBF;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AffichageSinistreController">

   <stylesheets>
      <URL value="styles.css" />
   </stylesheets>
   <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des Sinistres" />

      <HBox opacity="0.9" spacing="10.0" style="-fx-border-radius: 5px;">      <Label style="-fx-font-size: 15px;" text="Trier Par : ">
            <font>
               <Font name="Arial Black" size="15.0" />
            </font></Label>
         <Button alignment="CENTER_LEFT" onAction="#handleSortButtonpourcentage" styleClass="custom-button" text="Purcentage" />
         <Button alignment="CENTER_RIGHT" contentDisplay="CENTER" onAction="#handleSortButtonClientID" styleClass="custom-button" text="ID Client" />
         <Label prefHeight="18.0" prefWidth="54.0" text="Search:" />
         <TextField fx:id="searchField" promptText="Enter search query" styleClass="custom-text-field" />
         <Button alignment="CENTER_LEFT" onAction="#handleMenu" text="Menu" styleClass="custom-button" />
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
      <!-- Sinistre ListView -->
      <ListView fx:id="sinistreListView" style="-fx-background-color: #F2E0C9;" VBox.vgrow="ALWAYS" />
      <Pagination fx:id="pagination" styleClass="custom-button" />

      <!-- Button to Add Sinistre -->
      <Button onAction="#handleAjouterButton" styleClass="custom-button" text="Ajouter un Sinistre" />
   </VBox>

</AnchorPane>
