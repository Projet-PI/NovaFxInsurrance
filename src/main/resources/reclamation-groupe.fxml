<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.RECLAMATION.ReclamationGroupeController"
            prefHeight="600.0" prefWidth="1000.0">

    <!-- Search field -->
    <HBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <TextField fx:id="searchField" promptText="Search..." />
    </HBox>

    <!-- ListView for displaying reclamation groups -->
    <ListView fx:id="listView" AnchorPane.topAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="80.0" />

    <!-- Pagination controls -->
    <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Button onAction="#previousPage" text="Previous Page" style="-fx-background-color: #6495ED; -fx-text-fill: white;" />
        <Button onAction="#nextPage" text="Next Page" style="-fx-background-color: #6495ED; -fx-text-fill: white;" />
    </HBox>

    <!-- Add Reclamation Group button -->
    <GridPane alignment="CENTER" style="-fx-padding: 10px;" hgap="10" vgap="10" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Button onAction="#openReclamationGroupAddForm" text="Add Reclamation Group" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-background-color: #6495ED; -fx-text-fill: white;" />
    </GridPane>

</AnchorPane>
